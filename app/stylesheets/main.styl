//nib

@import 'nib/vendor'
vendor-prefixes = o ms moz webkit official

//variables
colBody = #F2F0DF
colMenu = #222


/******* reset ******/
*
  box-sizing border-box
  font-family helvetica, Verdana, Arial
  font-size 1.6rem
  margin 0
  padding 0
  list-style none
  text-decoration none

html
  font-size 62.5%
body
  background colBody
h2
  font-size 2.5rem

.separador
  background url(../img/separador.png) no-repeat center center
  height 30px
  margin 1.5rem 0


/***** menu ******/
#menu-container
  background colMenu
  height 100%
  position fixed
  text-align center
  width 200px
  #logo-menu
    padding-top 2rem
    #logo-name
      text-transform uppercase
      color #eee
      font-size 1.4rem
      padding-top 1rem
    #logo-desc
      text-transform uppercase
      color #bbb
      font-size 1rem
      padding-top 1rem
      padding-bottom 2rem

  #menu
    border-bottom solid 1px #444
    border-top solid 1px #888
    margin 0
    padding 4rem 0
    li
      margin 0
      padding 1rem

      a
        color #FCB95B
        transition all .4s
        &:hover
          color #F5DFCE

/***** contenedor principal ******/

  #main-container

    margin-left 20rem
    width 2600px

    .seccion
      border-right dotted 1px #ccc
      display inline-block
      height 600px
      overflow hidden
      overflow-y scroll
      padding 1rem
      vertical-align top
      width 500px

      h2
        border-bottom solid 1px #ccc
        padding 2rem
        text-transform uppercase

/***** Seccion Inicio ******/

    #seccion-inicio
      //overflow hidden
      //overflow-y scroll
      padding 10rem 2.5rem 0 2.5rem !important
      width 450px !important
      text-align center
      #contenido-inicio
        p
          color #444
          font-style italic
          font-size 1.8rem
        video
          margin-bottom 1rem

/***** Seccion Trabajo******/
    #seccion-trabajo
     .titulo
        margin 0
        padding 0
        display block
      #slider-miniatura
        position relative


        img
          overflow hiden
          position absolute
          margin 3rem 0
          width 100%
          display none
          &:first-child
            display block
      p
        margin-top 27rem
        display block
      #trabajos-container
        a
          color white

          .trabajo
            border solid 5px white
            box-sizing border-box
            height 15rem
            margin-bottom 1rem
            padding 10rem 1rem 1rem 1rem
            width 45rem
            transition all 0.5s

            $partes = acuarela, tinta, abecedario, dragones, dulces, retratos, revistas,sitiowww, city, influencia, luces, libros, flat, rostroscolor
            for $partes, $i in $partes
              &.{$partes}
                background url(../mg/fondo-trabajo.png), url('../img/trabajo/coleccion'($i+1)'-1.jpg')
                background-position: center center, 0 0
                background-size 100%

            &:hover
              background-position center center, center center
            p
              text-transform uppercase
      #colecciones-container
        background rgba(0, 0, 0, .75)
        display none
        height 100%
        left 0
        position fixed
        top 0
        width 100%
        a
          color black
          &:hover
            color #FCB95B

        .coleccion-container
          margin 20px auto
          width 700px
          .galeria
            display inline-block
            margin 0 auto
            width 400px
            text-align center
            vertical-align top
            img
              width 400px
              display block
          .descripcion
            background white
            display inline-block
            font-size 1.2rem
            margin-left -5px
            padding 3rem
            vertical-align top
            width 300px
            h3
              text-transform uppercase
            p
              line-height 2.5rem
              margin 1rem 0
            .controles
              margin 2rem 0
              text-align center
              a
                color black
                padding 1rem 1.5rem
                &:hover
                  color #FCB95B
            .cerrar
              text-align center
              a
                background url(../img/close.png) no-repeat left 32px
                background-repeat no-repeat
                background-position left
                background-size 32px
                padding 10px 28px






